<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.riverflows"
      android:versionCode="8"
      android:versionName="0.8">
    <application android:icon="@drawable/launcher" android:label="@string/app_name">
	    <activity android:name="Home"
                  android:label="@string/app_name"
                  android:launchMode="singleTask">
	    	<intent-filter>
	    		<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
	    <activity android:name="StateSelect"
	              android:label="Browse by State"
	              android:windowSoftInputMode="stateVisible"
	              android:launchMode="singleTask"/>
	              
	    <activity android:name="RiverSelect"
	              android:windowSoftInputMode="stateVisible"/>
	              
        <activity android:name="About"
                android:launchMode="singleTask"/>
                
      <activity android:name="DataSrcInfo"
                android:launchMode="singleTask"/>
                  
    	<activity android:name="ViewChart"/>
    	
	    <activity android:name="Favorites"
	              android:launchMode="singleTask"/>
		
	</application>
    <uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 