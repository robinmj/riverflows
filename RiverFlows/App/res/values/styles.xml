<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RiverFlows" parent="@style/Theme.Sherlock"></style>

    <color name="txt_level_too_high">#fff</color>
    <color name="bg_level_too_high">#000</color>
    <color name="txt_level_high">#fff</color>
    <color name="bg_level_high">#006</color>
    <color name="txt_level_medium">#fff</color>
    <color name="bg_level_medium">#44f</color>
    <color name="txt_level_low">#333</color>
    <color name="bg_level_low">#aaf</color>
    <color name="txt_level_too_low">#fff</color>
    <color name="bg_level_too_low">#666</color>

    <style name="LevelLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47sp</item>
        <item name="android:layout_marginBottom">1sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LevelCaretBalloon">
        <item name="android:background">@drawable/level_caret_balloon</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:layout_marginBottom">1sp</item>
    </style>

    <style name="LevelField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">50sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="LevelUnitLabel">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">unit</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>